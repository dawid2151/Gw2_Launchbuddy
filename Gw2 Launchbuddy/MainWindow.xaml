                                    <Button x:Name="bt_fetchlbversions" Margin="3" Content="Check for Updates" DockPanel.Dock="Left" Click="bt_fetchlbversions_Click" ToolTip="Check for Gw2 Launchbuddy updates."/>
                                    <Button x:Name="bt_downloadrelease" Margin="3" Content="Download" Click="bt_downloadrelease_Click" IsEnabled="False" DockPanel.Dock="Left" ToolTip="Download the selected Launchbuddy version." MinWidth="80" MaxWidth="200"/>
                                </DockPanel>

                            </Grid>
                            <Separator/>
                            <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                                <Label x:Name="label" Content="Gw2 Client Details:" HorizontalAlignment="Left" Grid.ColumnSpan="2" Style="{StaticResource H1}" Width="152"/>
