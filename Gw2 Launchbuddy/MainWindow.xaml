                                <Image  Source="Resources/opacitymask.png" Stretch="Fill"/>
                                <TextBlock  Text="Coooo! Quaggan will do the best to help you!" Foreground="White" Margin="15" x:Name="tblock_crashsolutioninfo" TextWrapping="Wrap" FontSize="14"/>
                            </Grid>

                        </Grid>
