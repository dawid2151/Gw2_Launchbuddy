                                    <Button x:Name="bt_installpath" DockPanel.Dock="Left" ToolTip="Set your gamefolder path if it isn't &#x0a; determined correctly by launchbuddy" Content="Set" Click="bt_installpath_Click" Width="40" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                </DockPanel>

                            </StackPanel>
                            <Separator Margin="-3,15,0,10"/>
                            <StackPanel>
                                <Label Content="Bug Report:" Style="{StaticResource H2}"></Label>
                                <Button x:Name="bt_bugreport" Content="Report a Bug"  Click="bt_bugreport_Click" Height="30" MaxWidth="250" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                </TabItem>
                <TabItem Visibility="Hidden" Height="10"/>
            </TabControl>
            <DockPanel Margin="20,5,20,5" Grid.Row="1" Grid.ColumnSpan="2">
                <Button x:Name="bt_launch" Style="{StaticResource LaunchButton}"  Click="bt_launch_Click" BorderThickness="0" BorderBrush="{x:Null}" Foreground="{x:Null}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="100*" MinWidth="375"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <Border Background="Black" Grid.Column="1">
                            <Label Grid.ColumnSpan="3" Grid.Column="1" Content="Launch Guild Wars 2" Foreground="#FFF9F9F9" HorizontalAlignment="Center" FontSize="19" Background="{x:Null}" BorderBrush="Black" FontWeight="Bold"/>
