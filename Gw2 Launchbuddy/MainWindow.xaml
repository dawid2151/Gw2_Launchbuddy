                                    <ImageBrush ImageSource="Resources/Icons/crashfix.png"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                            <Label FontSize="10" Margin="0,-5,0,-7">Crashes</Label>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50*"/>
                            <RowDefinition Height="25*"/>
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*"/>
                                <ColumnDefinition Width="50*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="100*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Button Content="Fix" Grid.Column="1" Grid.Row="2" IsEnabled="False" x:Name="bt_fixcrash" FontSize="14" FontWeight="Bold" ToolTip="Try to fix the currently selected crash." Click="bt_fixcrash_Click"/>
